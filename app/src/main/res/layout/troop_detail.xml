<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.greenfox.peridot.peridot_coz_android.fragment.TroopDetailFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="50dp"
        android:background="#CCFFFFFF"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/detailTroopImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center"/>
        <TextView
            android:text="Troop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/troopLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/troopHP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/troopAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/troopDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
