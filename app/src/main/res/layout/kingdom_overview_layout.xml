<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fffbf7">

    <android.support.v7.widget.CardView
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/cardview_buildings"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Buildings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_main_buildings"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="left"/>

            <TextView
                android:text="17 finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_finished_buildings"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:gravity="left"/>

            <Button
                android:id="@+id/buildings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/textview_finished_buildings"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="#f4bf42"
                android:text="GO TO BUILDINGS"
                android:clickable="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/cardview_resources"
        card_view:cardCornerRadius="4dp"
        android:layout_below="@+id/cardview_buildings"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Resources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_main_resources"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="left"/>
            <TextView
                android:text="500 gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_gold"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:gravity="left"/>
            <TextView
                android:text="1200 food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_food"
                android:paddingLeft="10dp"
                android:paddingBottom="25dp"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:gravity="left"/>

            <Button
            android:id="@+id/resources_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="#f4bf42"
            style="?android:attr/borderlessButtonStyle"
            android:text="GO TO RESOURCES"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/cardview_troops"
        card_view:cardCornerRadius="4dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/cardview_resources"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Troops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_main_troops"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:gravity="left"/>
            <TextView
                android:text="12 finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textview_finished_troops"
                android:paddingLeft="10dp"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:gravity="left"/>
            <Button
                android:id="@+id/troops_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/textview_finished_troops"
                android:textColor="#f4bf42"
                style="?android:attr/borderlessButtonStyle"
                android:text="GO TO TROOPS"
                android:clickable="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
